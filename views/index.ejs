<!DOCTYPE html>
<html>
<head>
  <title>My Blog</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
<div class="box">
  <h1>Enter your blog</h1>

  <% posts.forEach((post, index) => { %>
  <div class="post-row">
    <div class="title-box"><%= post.title %></div>
    <div class="content-box"><%= post.content %></div>
    <div class="actions" style="display:flex; flex-direction:column; gap:5px;">
      <!-- Edit button -->
      <form action="/edit/<%= index %>" method="GET">
        <button type="submit" style="background:#FFD966; border:none; padding:5px 10px; border-radius:4px; cursor:pointer;">Edit</button>
      </form>

      <!-- Delete button -->
      <form action="/delete/<%= index %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this post?');">
        <button type="submit" style="background:#FF6B6B; color:white; border:none; padding:5px 10px; border-radius:4px; cursor:pointer;">Delete</button>
      </form>
    </div>
    </div>
    <% }) %>


  <form method="POST" action="/new">
    <input type="text" name="name" placeholder="Blog Title" required>
    <textarea name="info" placeholder="Your post content here" required></textarea>
    <button type="submit">Publish</button>
  </form>
</div>
<script>
  document.addEventListener("DOMContentLoaded", function() {
    const form = document.querySelector("form");
    const publishButton = document.querySelector('button[type="submit"]');

    // If Enter key is pressed anywhere in the form
    form.addEventListener("keydown", function(event) {
      if (event.key === "Enter" && !event.shiftKey) { 
        event.preventDefault(); // prevent accidental new lines in textarea
        publishButton.click();  // programmatically click Publish button
      }
    });
  });
</script>
</body>
</html>
